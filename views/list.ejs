<%- include("header") -%>
<div class="box">

  <h1 id="heading"><%= listTitle %></h1>
  <% tasks.forEach((task) => { %>
    <form action="/delete" method="post">
      <div class="item">
        <input type="checkbox" name="checkbox" value="<%= task._id %>" onChange="this.form.submit()">
        <p> <%= task.name %> </p>
      </div>
      <input type="hidden" name="name" value="<%= listTitle %>">
    </form>
  <%  }); %>

  <form class="item" action="/" method="post">
    <input type="text" name="newItem" placeholder="Enter New Task" autofocus autocomplete="off">
    <!-- <button type="submit" name="button">Add Task</button> -->
    <button class="button" type="submit" name="name" value="<%= listTitle %>">+</button>
  </form>

</div>
<%- include("footer") -%>
